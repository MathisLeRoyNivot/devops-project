pipeline {
    agent none 
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            agent { docker 'tmaier/docker-compose:latest' } 
            steps {
                sh 'sudo docker-compose build'
            }
        }
        stage('deploy') {
            agent { docker 'tmaier/docker-compose:latest' } 
            steps {
                sh 'scp -r ./ deploy@51.210.8.183:~/abb'
                sh 'ssh deploy@51.210.8.183'
                sh 'cd ~/abb'
                sh 'sudo docker-compose build'
                sh 'sudo docker-compose up'
            }
        }
    }
}
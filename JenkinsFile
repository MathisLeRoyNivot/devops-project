pipeline {
    agent any
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            steps {
                sh 'docker exec -ti devops-project_website_1 /bin/bash'
                sh 'npm run test'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker-compose up'
            }
        }
    }
}
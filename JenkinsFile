pipeline {
    agent none 
    stages {
        stage('Checkout'){
          checkout scm
        }
        stage('Build') {
            agent { docker 'tmaier/docker-compose:latest' } 
            steps {
                sh 'docker-compose build'
            }
        }
        stage('deploy') {
            agent { docker 'tmaier/docker-compose:latest' } 
            steps {
                sh 'scp -r ./ deploy@51.210.8.183:~/abb'
                sh 'ssh deploy@51.210.8.183'
                sh 'cd ~/abb'
                sh 'docker-compose build'
                sh 'docker-compose up'
            }
        }
    }
}
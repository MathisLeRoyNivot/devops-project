pipeline {
    agent any
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            steps {
                sh 'docker-compose up -d website'
                sh 'docker exec githubpipeline_database_1 /bin/bash npm run test'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker-compose up'
            }
        }
    }
}
pipeline {
    agent {
        image "tmaier/docker-compose"
        label 'compose'
    } 
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('deploy') {
            steps {
                sh 'scp -r ./ deploy@51.210.8.183:~/abb'
                sh 'ssh deploy@51.210.8.183'
                sh 'cd ~/abb'
                sh 'docker-compose build'
                sh 'docker-compose up'
            }
        }
    }
}
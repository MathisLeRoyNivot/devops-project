pipeline {
    agent any
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            agent { docker 'pivotalpa/angular-cli:latest' } 
            steps {
                sh 'docker-compose build'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker-compose up'
            }
        }
    }
}
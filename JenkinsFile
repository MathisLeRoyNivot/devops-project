pipeline {
    agent any
    stages {
        //stage('Checkout'){
        //  checkout scm
        //}
        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            agent {
                dockerfile {
                dir 'TEST'
                filename 'dockerfile'
                label 'docker'
            }
            steps {
                sh 'docker-compose up -d website'
                sh 'docker exec githubpipeline_website_1 npm run test'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker-compose up'
            }
        }
    }
}